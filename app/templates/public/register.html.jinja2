{% extends 'public/templates/public_template.html.jinja2' %}

{% block title %}Sign in{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Sign up</h1>
                <hr>

                <form action="/register" method="POST">
                    {{ form.username.label(class="form-check") }}
                    {{ form.username(class="form-control",placeholder="Select a username") }}
                        {% if form.username.errors %}
                            {% for error in form.username.errors %}
                                <div class="alert alert-warning">
                                    {{ error }}
                                </div>
                            {% endfor %}
                        {% endif %}

                    {{ form.name.label(class="form-check") }}
                    {{ form.name(class="form-control",placeholder="Select a name") }}
                        {% if form.name.errors %}
                            {% for error in form.name.errors %}
                                <div class="alert alert-warning">
                                    {{ error }}
                                </div>
                            {% endfor %}
                        {% endif %}

                    {{ form.password.label(class="form-check") }}
                    {{ form.password(class="form-control",placeholder="Create a password") }}
                        {% if form.password.errors %}
                            {% for error in form.password.errors %}
                                <div class="alert alert-warning">
                                    {{ error }}
                                </div>
                            {% endfor %}
                        {% endif %}

                    {{ form.password_repeat.label(class="form-check") }}
                    {{ form.password_repeat(class="form-control",placeholder="Repeat a password") }}
