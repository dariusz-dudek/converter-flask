{% extends 'public/templates/public_template.html.jinja2' %}

{% block title %}Sign in{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Sign up</h1>
                <hr>

                <form action="/login" method="POST">
                    {{ form.username.label(class="form-check") }}
                    {{ form.username(class="form-control",placeholder="Select a username") }}
                        {% if form.username.errors %}
                            {% for error in form.username.errors %}
                                <div class="alert alert-warning">
                                    {{ error }}
                                </div>
                            {% endfor %}
                        {% endif %}


                    {{ form.password.label(class="form-check") }}
                    {{ form.password(class="form-control",placeholder="Create a password") }}
                        {% if form.password.errors %}
                            {% for error in form.password.errors %}
                                <div class="alert alert-warning">
                                    {{ error }}
                                </div>
                            {% endfor %}
                        {% endif %}


                    <button type="submit" class="btn btn-primary">Login</button>
                </form>

            </div>
        </div>

    </div>

{% endblock %}
{% block scropt %}{% endblock %}